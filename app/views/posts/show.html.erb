<h1>Here is post <%= params[:id] %> by user <%= params[:user_id] %></h1>
<div class="bio">
  <div class='title'>
    <h4 class = "p-bio">Post #<%=@post.id%> by <%=@post.author.name%></h4>
    <p>comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
  </div>
  <p class = "p-bio"><%= @post.text %></p>
</div>

<div class="comments">
  <h4 class = "p-bio">Comments</h4>
  <% @post.comments.each do |comment| %>
    <%= comment.author.name %> : <%= comment.text %><br>
  <% end %>
</div>
<div class="add">
  <button id="show-more-btn"><%= link_to "Add Comment", new_user_post_comment_path(@post.author, @post) %></button>
  <button id="show-more-btn"><%= link_to "Add Like", new_user_post_like_path(@post.author, @post) %></button>
</div>
